@foreach (var item in Model)
{
    <tr>
        @if (item.Imagem64 == "")
        {
            <td>
                <img src="~/Content/images/iconecor.png" height="100" width="100" />
            </td>
        }
        else
        {
            String imagem64 = string.Format("data:image/jpeg;base64,{0}", item.Imagem64); //PRECISA DISSO PRA FUNCIONAR A IMAGEM
            <td>
                <img src="@imagem64" height="100" width="100" />
            </td>
        }
        
        <td>
            CNPJ: @item.Cnpj
        </td>
        <td>
            @item.Nome_empresa
        </td>
        <td>
            E-mail: @item.Email
        </td>
        <td>
            Tel: @item.Telefone
        </td>
        <td>
            Cel: @item.Celular
        </td>
        <td>

            @item.Cidade
        </td>
        <td>
            @item.Uf
        </td>
        <td>
            @item.Descricao
        </td>
        <td>
            Média: @item.Media
        </td>
        <td>
            Slogan: @item.Slogan
        </td>
        <td>
            @item.Plano
        </td>
        <td>
            Categoria: @item.Nome_categoria
        </td>
        <td>
            @if (item.Plano.Equals("P"))
            {
                <a>Qualidade: </a>@item.Media_qualidade <br /> 
                <a>Atendimento: </a>@item.Media_atendimento <br /> 
                <a>Entrega: </a>@item.Media_entrega <br /> 
                <a>Preco: </a>@item.Media_preco <br /> 
                <a>Satisfacao: </a>@item.Media_satisfacao
            }
        </td>
    </tr>
}

</table>
