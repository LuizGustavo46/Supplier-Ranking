@model List<SupplierRanking.Models.Fornecedor>

@{
    ViewBag.Title = "RankingGeral";
    Layout = null;
}

<h2>RankingGeral</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            CNPJ
        </th>
        <th>
            NOME
        </th>
        <th>
            EMAIL
        </th>
        <th>
            TELEFONE
        </th>
        <th>
            CIDADE
        </th>
        <th>
            UF
        </th>
        <th>
            CELULAR
        </th>
        <th>
            DESCRIÇÃO
        </th>
        <th>
            MEDIA
        </th>
        <th>
            SLOGAN
        </th>
        <th>
            PLANO
        </th>
        <th>
            CATEGORIA
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        @if (item.Imagem64 == "")
        {
            <td>
                <img src="~/Content/images/fotopadrao.jpg" height="100" width="100" />
            </td>
        }
        else
        {
            String imagem64 = string.Format("data:image/jpeg;base64,{0}", item.Imagem64); //PRECISA DISSO PRA FUNCIONAR A IMAGEM
            <td>
                <img src="@imagem64" height="100" width="100" />
            </td>
        }
        
        <td>
            @item.Cnpj
        </td>
        <td>
            @item.Nome_empresa
        </td>
        <td>
            @item.Email
        </td>
        <td>
            @item.Telefone
        </td>
        <td>
            @item.Cidade
        </td>
        <td>
            @item.Uf
        </td>
        <td>
            @item.Celular
        </td>
        <td>
            @item.Descricao
        </td>
        <td>
            @item.Media
        </td>
        <td>
            @item.Slogan
        </td>
        <td>
            @item.Plano
        </td>
        <td>
            @item.Nome_categoria
        </td>
    </tr>
}

</table>
