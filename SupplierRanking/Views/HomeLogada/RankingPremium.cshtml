@model List<SupplierRanking.Models.Fornecedor>

@{
    ViewBag.Title = "RankingPremium";
    Layout = "~/Views/Shared/Layout_logada.cshtml";
}


<div class="row">
    <h2 style="color: #D0A748;font-weight: bold; text-shadow: 1px 2px 0px #6c6c6c;margin-bottom: 4rem;margin-top: 8rem;margin-left: 56rem;
     margin-bottom: -136px;">
        Esses são nossos Destaques da Semana!
    </h2>
    <ul class="row list-unstyled m-3" style="margin-top: 18rem !important;">
        @foreach (var item in Model)
        {
            if (item.Plano.Equals("P"))
            {
                <li class="col-12 p-4 mb-5 my-5" style="background: white;box-shadow: 0px 0px 9px black;background: #2c8cb6;
                         box-shadow: 0px 0px 23px black;color: white;border: solid 1px #00000045;width: 1557px;margin-left: 24px;margin-bottom: 0rem !important">
                    <div class="row">
                        <div class="d-flex justify-content-center align-items-center mr-5" style="padding-left: 4rem;">

                            <div class="pr-5">
                                <h2>@(Model.IndexOf(item) + 1)º </h2>
                            </div>

                            @*<div class="col-10">*@
                            @if (item.Imagem64 == "")
                            {
                                <img src="/Content/images/iconecor.png" height="100" width="100" />
                            }
                            else
                            {
                                String imagem64 = string.Format("data:image/jpeg;base64,{0}", item.Imagem64); //PRECISA DISSO PRA FUNCIONAR A IMAGEM
                                <img src="@imagem64" height="100" width="100" />
                            }
                            
                            @*</div>*@
                            <div class="col-5 " style="width: 972px;">
                                <div class="d-flex align-items-baseline pl-3">
                                    <h4>
                                        @item.Media
                                    </h4>
                                    <div class="d-flex col-10 justify-content-around pl-5">
                                        <div>
                                            <img />
                                            @item.Media_qualidade
                                        </div>

                                        <div>
                                            <img />
                                            @item.Media_atendimento
                                        </div>

                                        <div>
                                            <img />
                                            @item.Media_entrega
                                        </div>

                                        <div>
                                            <img />
                                            @item.Media_preco
                                        </div>

                                        <div>
                                            <img />
                                            @item.Media_satisfacao
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <h2 style="font-weight: bold;">
                                        @item.Nome_empresa
                                    </h2>
                                </div>
                                <div>
                                    @item.Nome_categoria
                                </div>
                            </div>
                            <div class="col-4 d-flex justify-content-between mr-5" style="flex-direction:column; border-left: 2px solid;padding-left: 5rem;">

                                <h3>"@item.Slogan"</h3>
                                <p style="color: white;">
                                    @item.Endereco, @item.Bairro - @item.Cidade / @item.Uf
                                </p>
                            </div>
                            <div class="col-1 d-flex flex-wrap justify-content-center align-items-center">
                                @if (Session["UserFornecedor"] == null)
                                {
                                    <button data-target="#myModal" class="btn btn-info btn-lg" data-toggle="modal">Avaliar</button>
                                }
                                <a style="text-decoration: none;color: white;" id="" href="/HomeLogada/Perfil/?Cnpj=@item.Cnpj">Perfil</a>
                            </div>
                        </div>
                   </div>
                </li>
            }
        }
    </ul>
 </div>

                      