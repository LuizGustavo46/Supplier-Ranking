@model SupplierRanking.Models.Comprador
@{
    ViewBag.Title = "UpdatePessoaFisica";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

    <div class="container-login100" style="width: 946px;height: 900px;background: #fff;position: absolute;left:435px;margin-top: 172px; box-shadow: 1px 1px 27px;">

        <div class="wrap-login100" style="background-color: white;position: absolute;left: 41%;">

            <h2 style="margin-left: -45px;margin-bottom: 41px;">
                Editar informações
            </h2>

            <form action="/Comprador/UpdatePessoaFisica" method="post" class="login100-form validate-form ">
                <p>@ViewBag.Message</p>
                <!--- Campos do Comprador Fisico -->
                <div class="col-10 wrap-input pl-2">
                    <input class="input " type="text" value="@Model.Codigo" name="codigo" readonly="readonly" style="visibility:hidden;margin-top: -85px;">
                    <a name="codigo" style="margin-bottom: -31px;margin-left: 66px;visibility: hidden;">@Model.Codigo</a>
               
                    <br /> <br />
               
                    <input class="input" type="text" value="@Model.Cpf" name="cpf" readonly="readonly" style="visibility:hidden;margin-top: -8rem;">
                    <a name="cpf" >CPF: @Model.Cpf</a>
                
                
                    <br /> <br />
               
                    <input class="input" type="text" value="@Model.Nome" name="nome" style="margin-left: -29px;">
               
                    <br /> <br />
                
                    <input class=" input" type="text" value="@Model.Sobrenome" name="sobrenome" style="margin-left: -29px;">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Email" name="email" style="margin-left: -29px;">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Uf" name="uf" style="margin-left: -29px;">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Telefone" name="telefone" placeholder="(00) 0000-0000" style="margin-left: -29px;">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Celular" name="celular" placeholder="(00) 00000-0000" style="margin-left: -29px;">
                    <br /> <br />
                </div>

                <br /> <br />
                <button type="submit" style="margin-left:27px;background: #166083;" class="btn btn-info btn-lg" id="btnAtualizar">Atualizar</button>
            </form>
        </div>
    </div>

