@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<div class="container-login100">
    <div class="wrap-login100" style="background-color: white;">
        <h2>Cadastro Fornecedor</h2>
        <form action="../Fornecedor/UpdateFornecedor" method="post" class="login100-form validate-form" enctype="multipart/form-data">

            <!--- Campos do Fornecedor -->
            <div id="">
                <label for="imagem" style="border: 1px solid; background-color: gainsboro; padding: .5em; font-size: 12px; cursor: pointer;">Imagem de Perfil</label>
                <input type="file" accept="image/*" id="imagem" name="imagem" style="display: none">

                @*<input type="file" name="imagem" />*@
                <br /> <br />
                <input type="text" name="cnpj" placeholder="CNPJ">
                <br /> <br />
                <input type="text" name="nome_empresa" placeholder="Nome da Empresa">
                <br /> <br />
                <input type="text" name="email" placeholder="Email">
                              
                <br /> <br />
                <input type="text" name="cep" placeholder="CEP">
                <br /> <br />
                <input type="text" name="endereco" placeholder="Endereço">
                <br /> <br />
                <input type="text" name="bairro" placeholder="Bairro">
                <br /> <br />
                <input type="text" name="cidade" placeholder="Cidade">
                <br /> <br />
                <input type="text" name="uf" placeholder="UF">
                <br /> <br />
                <input type="text" name="telefone" placeholder="(00) 0000-0000">
                <input type="text" name="celular" placeholder="(00) 00000-0000">
                <br /> <br />
                <input type="text" name="slogan" placeholder="Digite o seu slogan!">
                <br /> <br />
                <input type="text" name="descricao" placeholder="Uma breve descrição">
                <br /> <br />
                <input type="text" name="nome_categoria" placeholder="categoria">

                <br /> <br />             

                <br /> <br />

            </div>

            <br /> <br />
            <button id="btnAtualizar">Atualizar</button>
        </form>
    </div>
</div>