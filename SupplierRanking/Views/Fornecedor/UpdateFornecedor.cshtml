@model SupplierRanking.Models.Fornecedor
@{
    ViewBag.Title = "Update Fornecedor";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

    <div class="container-login100" style="width: 946px;height: 882px;background: #fff;position: absolute;left:435px;margin-top: 163px; box-shadow: 1px 1px 27px;">

        <div class="wrap-login100" style="background-color: white;position: absolute;left: 41%;">

            <h2 style="margin-left: -40px;">Editar informações</h2>
            <form action="../Fornecedor/UpdateFornecedor" method="post" class="login100-form validate-form" enctype="multipart/form-data">

                <!--- Campos do Fornecedor -->
                <div id="">
                    @*<label for="imagem" style="border: 1px solid; background-color: gainsboro; padding: .5em; font-size: 12px; cursor: pointer;">Imagem de Perfil</label>
                        <input type="file" accept="image/*" id="imagem" name="imagem" style="display: none">*@

                    <br /> <br />
                    @*<input type="text" name="confirmaSenha" placeholder="Digite sua senha">*@
                    <br /> <br />

                    <!--- CNPJ --->
                    <div class="col-11 wrap-input p-0">
                        <input class="input required-field" type="text" maxlength="19" name="cnpj" placeholder="* CNPJ" data-mask="00.000.000/0000-00" data-mask-sectionFocus="true" value="@Model.Cnpj" />
                    </div>

                    <!--- Nome da Empresa --->
                    <div class="col-11 wrap-input p-0">
                        <input class="input required-field" type="text" name="nome_empresa" placeholder="* Nome da Empresa" value="@Model.Nome_empresa">
                    </div>

                    <!--- Email --->
                    <div class="col-11 wrap-input p-0">
                        <input class="input required-field" type="email" name="email" placeholder="* Email"  value="@Model.Email">
                    </div>


                    @*<input class="input " type="text" name="cnpj" placeholder="CNPJ">
                    <br /> <br />
                    <input class="input" type="text" name="nome_empresa" placeholder="Nome da Empresa">
                    <br /> <br />
                    <input class="input" type="text" name="email" placeholder="Email">*@
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Cep" name="cep" placeholder="CEP">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Endereco" name="endereco" placeholder="Endereço">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Bairro" name="bairro" placeholder="Bairro">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Cidade" name="cidade" placeholder="Cidade">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Uf" name="uf" placeholder="UF">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Telefone" name="telefone" placeholder="(00) 0000-0000">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Celular" name="celular" placeholder="(00) 00000-0000">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Slogan" name="slogan" placeholder="Digite o seu slogan!">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Descricao" name="descricao" placeholder="Uma breve descrição">
                    <br /> <br />
                    <input class="input" type="text" value="@Model.Nome_categoria" name="nome_categoria" placeholder="categoria">
                    <br /> <br />
                    <input class="button" type="file" name="Imagem" />
                    <br /> <br />

                </div>

                <br /> <br />
                <button type="submit" style="margin-top: -62px;background: #166083;" class="btn btn-info btn-lg" id="btnAtualizar">Atualizar</button>
            </form>
        </div>
    </div>
