@model SupplierRanking.Models.Fornecedor
@{
    ViewBag.Title = "UpdateFornecedor";
    //Layout = "~/Views/Shared/LoginLayout.cshtml";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<div class="container-login100">

    <div class="wrap-login100" style="background-color: white;">

        <h2>update Fornecedor</h2>
        <form action="../Fornecedor/UpdateFornecedor" method="post" class="login100-form validate-form" enctype="multipart/form-data">

            <!--- Campos do Fornecedor -->
            <div id="">
                <label for="imagem" style="border: 1px solid; background-color: gainsboro; padding: .5em; font-size: 12px; cursor: pointer;">Imagem de Perfil</label>
                <input type="file" accept="image/*" id="imagem" name="imagem" style="display: none">

                
                <br /> <br />
                <input type="text" name="confirmaSenha" placeholder="Digite sua senha">                
                <br /> <br />          
                <input type="text" name="@Model.Cnpj" placeholder="CNPJ">
                <br /> <br />
                <input type="text" name="@Model.Nome_empresa" placeholder="Nome da Empresa">
                <br /> <br />
                <input type="text" name="@Model.Email" placeholder="Email">                             
                <br /> <br />
                <input type="text" name="@Model.Cep" placeholder="CEP">
                <br /> <br />
                <input type="text" name="@Model.Endereco" placeholder="Endereço">
                <br /> <br />
                <input type="text" name="@Model.Bairro" placeholder="Bairro">
                <br /> <br />
                <input type="text" name="@Model.Cidade" placeholder="Cidade">
                <br /> <br />
                <input type="text" name="@Model.Uf" placeholder="UF">
                <br /> <br />
                <input type="text" name="@Model.Telefone" placeholder="(00) 0000-0000">
                <input type="text" name="@Model.Celular" placeholder="(00) 00000-0000">
                <br /> <br />
                <input type="text" name="@Model.Slogan" placeholder="Digite o seu slogan!">
                <br /> <br />
                <input type="text" name="@Model.Descricao" placeholder="Uma breve descrição">
                <br /> <br />
                <input type="text" name="@Model.Nome_categoria" placeholder="categoria">
                <br /> <br />             
                <input type="file" name="@Model.Imagem" />
                <br /> <br />

            </div>

            <br /> <br />
            <button id="btnAtualizar">Atualizar</button>
        </form>
    </div>
</div>