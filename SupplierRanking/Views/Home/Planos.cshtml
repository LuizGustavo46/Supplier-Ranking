
@{ ViewBag.Title = "Planos"; }
   
<!-- INÍCIO - Carossel -->
<section class="home-slider owl-carousel">
    <div class="slider-item" 
         style="background-image: url('/Content/images/planos.jpg');" 
         data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text align-items-center">
                <div class="col-md-7 col-sm-12 ftco-animate"> 
                    <h1 class="mb-3">Planos</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- FIM - Carossel -->

<!-- INÍCIO - Planos -->
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            <!-- INÍCIO - Plano Free -->
            <div class="col-md-4 text-center ftco-animate">
                <div class="pricing p-4 py-5">
                    <div class="icon mb-2">
                        <img style="width:100px; heigth:100px;" src="~/Content/images/plano.png" />
                    </div>
                    <h3 class="mb-3">Free</h3>
                    <p class="mb-4">
                        Com o plano Free, você poderá ter acesso às funcionalidades do sistema,
                        sem ter que se preocupar em desembolsar qualquer quantia.
                    </p>
                    <p class="price mb-4 py-3">
                        <span class="mr-2 currency"> R$0,00 </span> 
                        <span class="per"> por mês </span>
                    </p>
                    <p>
                        <a href="#" class="btn btn-primary price-free">
                            Iniciar gratuitamente
                        </a>
                    </p>
                </div>
            </div>
            <!-- FIM - Plano Free -->

            <!-- INÍCIO - Plano Premium -->
            <div class="col-md-4 text-center ftco-animate">
                <div class="pricing p-4 py-5">
                    <div class="icon mb-2">
                        <img style="width:100px; heigth:100px;" src="~/Content/images/give-money.png" />   
                    </div>
                    <h3 class="mb-3">Premium</h3>
                    <p class="mb-4">
                        Com nosso plano Premium, além de você ter acesso à todas as funcionalidades do sistema,
                        você que está começando no mercado agora ou que já está há alguns anos, poderá ficar no
                        topo da lista das melhores empresas fornecedoras de materiais
                    </p>
                    <p class="price mb-4 py-3">
                        <span class="mr-2 currency"> R$29,90 </span> 
                        <span class="per"> por mês </span>
                    </p>
                    <p>
                        <a href="#" class="btn btn-primary">
                            Assinar
                        </a>
                    </p>
                    <a href="#">
                        Faça o teste por 30 dias!
                    </a>
                </div>
            </div>
            <!-- FIM - Plano Premium -->
        </div>
    </div>
</section>
<!-- FIM - Planos -->

   