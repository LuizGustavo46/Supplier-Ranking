@{ 
     ViewBag.Title = "Login";
     Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<div class="row col-12 justify-content-center text-center mt-4">
    <h2>Login</h2>
</div>

<div class="row text-center align-items-center justify-content-center p-5">
    Selecione o seu tipo de usuário:

    <div class="row col-12 mt-4">
        <!--- Comprador --->
        <div class="col-5 js-tilt" data-tilt>
            <button id="btnComprador" class="col-9 switch-wrapper p-3">
                <img src="/Content/images/comprador.png" />
                <h5 class="switch-person-title p-2">Comprador</h5>
            </button>
        </div>

        <!--- Switch --->
        <label class="switch m-3">
            <input id="switchFornecedor" type="checkbox">
            <span class="slider slider-fornecedor round unchecked"></span>
        </label>

        <!--- Fornecedor --->
        <div class="col-5 js-tilt" data-tilt>
            <button id="btnFornecedor" class="col-9 switch-wrapper p-3">
                <img src="/Content/images/fornecedor.png" />
                <h5 class="switch-person-title p-2">Fornecedor</h5>
            </button>
        </div>
    </div>
</div>

<!--- Formulário de Login --->
<form class="row login-form validate-form mt-4 p-5">

    <!--- Pessoa Física & Pessoa Jurídica --->
    <div id="wrapperFisicaJuridica" class="col-12 text-center align-items-center justify-content-center">
        Informe o seu tipo de perfil:
        
        <div class="row col-12 mt-4">

            <!--- Pessoa Física --->
            <div class="col-5 js-tilt" data-tilt>
                <button id="btnFisica" class="col-9 switch-wrapper p-3">
                    <img src="/Content/images/comprador.png" />
                    <h5 class="switch-person-title p-2">Física</h5>
                </button>
            </div>

            <!--- Switch --->
            <label class="switch m-3">
                <input id="switchJuridica" type="checkbox">
                <span class="slider slider-juridica round unchecked"></span>
            </label>

            <!--- Pessoa Jurídica --->
            <div class="col-5 js-tilt" data-tilt>
                <button id="btnJuridica" class="col-9 switch-wrapper p-3">
                    <img src="/Content/images/fornecedor.png" />
                    <h5 class="switch-person-title p-2">Jurídica</h5>
                </button>
            </div>

        </div>
    </div>

    <!--- Funcionario --->
    <div id="wrapperFuncionario" class="row col-12 text-center justify-content-center">
