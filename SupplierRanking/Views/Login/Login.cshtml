@{ 
     ViewBag.Title = "Login";
     Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row col-12 justify-content-center text-center mt-4">
    <h2>Login</h2>
</div>

<div class="row text-center justify-content-center p-5">
    Selecione o seu tipo de usuário:

    <div class="row col-12 align-items-center mt-4">
        <!--- Comprador --->
        <div class="col-5 js-tilt" data-tilt>
            <button id="btnComprador" class="col-9 switch-wrapper p-3">
                <img src="/Content/images/comprador.png" />
                <h5 class="switch-person-title p-2">Comprador</h5>
            </button>
        </div>

        <!--- Switch --->
        <label class="switch m-3">
            <input id="switchFornecedor" type="checkbox">
            <span class="slider slider-fornecedor round unchecked"></span>
        </label>

        <!--- Fornecedor --->
        <div class="col-5 js-tilt" data-tilt>
            <button id="btnFornecedor" class="col-9 switch-wrapper p-3">
                <img src="/Content/images/fornecedor.png" />
                <h5 class="switch-person-title p-2">Fornecedor</h5>
            </button>
        </div>
    </div>
</div>

<!--- Pessoa Fisica & Pessoa Juridica --->
<div id="wrapperFisicaJuridica"
     class="col-12 text-center justify-content-center mt-4 hide">
    Informe o seu tipo de perfil:

    <div class="row align-items-center mt-4 pr-5 pb-5 pl-5">
        <!--- Pessoa Fisica --->
        <div class="col-5 js-tilt">
            <button id="btnFisica" class="col-9 switch-wrapper p-3">
                <img src="/Content/images/comprador.png" />
                <h5 class="switch-person-title p-2">Física</h5>
            </button>
        </div>

        <!--- Switch --->
        <label class="switch m-3">
            <input id="switchJuridica" type="checkbox">
            <span class="slider slider-juridica round unchecked"></span>
        </label>

        <!--- Pessoa Juridica --->
        <div class="col-5 js-tilt">
            <button id="btnJuridica" class="col-9 switch-wrapper p-3">
                <img src="/Content/images/fornecedor.png" />
                <h5 class="switch-person-title p-2">Jurídica</h5>
            </button>
        </div>
    </div>
</div>

<!--- Funcionario --->
<div id="wrapperFuncionario"
     class="row col-12 text-center justify-content-center mt-4 hide">
    Ative o campo caso seja um funcionário

    <div class="row col-12 align-items-center justify-content-center mt-4 pr-5 pb-5 pl-5">
        <!--- Switch --->
        <label class="switch switch-funcionario">
            <input id="switchFuncionario" type="checkbox">
            <span class="slider slider-funcionario round"></span>
        </label>

        <!--- Funcionario --->
        <div class="col-5 text-center js-tilt">
            <button id="btnFuncionario" 
                    class="col-9 switch-wrapper p-3">
                <img src="/Content/images/comprador.png" />
                <h5 class="switch-person-title p-2">Funcionário</h5>
            </button>
        </div>
    </div>
</div>

<!--- Formulario de Login --->
<form class="row login-form justify-content-center p-5 hide" 
      method="post" action="../Login/Login">

    <!--- CPF --->
    <div id="inputCpf" class="col-10 wrap-input pl-2">
        <input class="input" type="text" maxlength="14" name="cpf" placeholder="CPF" data-mask="000.000.000-00" data-mask-sectionFocus="true">
    </div>

    <!--- CNPJ --->
    <div id="inputCnpj" class="col-10 wrap-input pl-2">
        <input class="input" type="text" maxlength="19" name="cnpj" placeholder="CNPJ" data-mask="00.000.000/0000-00" data-mask-sectionFocus="true">
    </div>

    <!--- Codigo Funcionario --->
    <div id="inputFuncionario" class="col-10 wrap-input pl-2 mt-3">
        <input class="input" type="text" name="codigoFuncionario" placeholder="Código do Funcionário">
    </div>

    <!--- Senha --->
    <div class="col-10 wrap-input pl-2  mt-3">
        <input class="input" type="password" name="senha" placeholder="Senha">
    </div>

    <input id="inputHidden" type="text" name="inputHidden" hidden>

</form>

<div class="row col-12 login-options justify-content-center p-5">

     <span class="col-8 error-msg alert-danger text-center p-2 mt-3 mb-4 hide"> 
        Preencha o(s) campo(s) corretamente! @ViewBag.Message
     </span>
    
    <div class="col-6">
        <!--- Esquci minha Senha --->
        <div class="text-left">
            <a class="sub-link" href="/Comprador/RestaurarSenha">
                Esqueceu sua senha?
            </a>
        </div>

        <!--- Criar Conta --->
        <div class="text-left pt-3">
            <a class="sub-link" href="/Login/Cadastro">
                Criar conta
            </a>
        </div>
    </div>

    <!--- Botao Entrar --->
    <div class="col-6 d-flex justify-content-end align-items-center pl-0 pr-4">
        <button type="submit" class="login-form-btn disabled" disabled>
            Entrar
        </button>
    </div>
</div>